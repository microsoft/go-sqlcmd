    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach using delve",
            "type": "go",
            "request": "attach",
            "preLaunchTask": "delve",
            "mode": "remote",
            "remotePath": "${workspaceFolder}",
            "port" : 23456,
            "host" : "127.0.0.1",
            "cwd" : "${workspaceFolder}",
        },
        {
            "name" : "Run query and exit",
            "type" : "go",
            "request": "launch",
            "mode" : "auto",
            "program": "${fileDirname}",
            "args" : ["-Q", "\"select 100 as Count\""],
        }
    ]
}